<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="it.polimi.ingsw.is25am02.view.gui.controllers.LobbyController" spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <ListView fx:id="lobbyList" prefHeight="200" prefWidth="300" />
    <Label fx:id="errorLabel" textFill="red" />
    <HBox spacing="10">
        <Button fx:id="joinButton" text="Join Lobby" onMouseClicked="#onJoinLobby" />
        <Button fx:id="refreshButton" text="Refresh" onMouseClicked="#onRefreshLobbies" />
    </HBox>
</VBox>